{
    "name": "dawen/elastic",
    "type": "library",
    "description": "Elasticsearch Component",
    "keywords": [],
    "homepage": "http://code.dawen.de/component",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Wendlandt",
            "email": "dan.wendlandt@gmail.com"
        },
        {
            "name": "Mario Mueller",
            "email": "mario@xenji.com"
        }
    ],
    "require": {
        "php": ">=5.4.10",
        "symfony/event-dispatcher": "~2.4",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "phpspec/prophecy-phpunit": "~1.0",
        "munkie/elasticsearch-thrift-php": "~1.4",
        "guzzlehttp/guzzle": "~4.0"
    },
    "autoload": {
        "psr-4": { "Dawen\\Component\\Elastic\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Dawen\\Component\\Elastic\\Tests\\": "tests/"
        }
    },
    "target-dir": "Dawen/Component/Elastic",
    "config": {
        "bin-dir": "bin"
    },

    "minimum-stability": "stable",

    "suggest": {
        "munkie/elasticsearch-thrift-php": "Needed for thrift transport",
        "guzzlehttp/guzzle": "Needed for HttpGuzzle transport"
    }
}
